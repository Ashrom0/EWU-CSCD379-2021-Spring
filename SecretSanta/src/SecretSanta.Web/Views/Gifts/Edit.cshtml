@{
    ViewBag.Title ="Gidts - Edit";
}

@model GiftViewModel

<form asp-controller="Gifts" asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    @await Html.PartialAsync("_CreateOrEdit")
    <button class="bg-red-500 hover:bg-red-200 text-white font-bold py-2 px-4 rounded">Update</button>
    <a class="bg-red-500 hover:bg-red-200 text-white font-bold py-2 px-4 rounded" asp-controller="Gifts" asp-action="Index">Cancel</a>
</form>