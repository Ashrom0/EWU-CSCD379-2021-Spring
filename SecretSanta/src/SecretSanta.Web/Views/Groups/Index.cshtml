@{
    ViewBag.Title = "Groups";
}

@model List<GroupViewModel>

@{int counter = 0;}

<section class="grid grid-cols-1 sm:grid-cols-3">
    @foreach(var groupViewModel in Model) {
    <a asp-action="Edit" asp-route-id=@counter>
        <section class="border-gray-500 border-2 p-6 m-5 rounded-lg">
            @groupViewModel.Name 
                <form asp-action="Delete" asp-route-id=@counter method="post">
                    <button onclick="return confirm('You are about to delete @groupViewModel.Name, are you sure you want to do this?');"><i class="fas fa-times text-2xl align-middle h-full"></i></button>
                </form>
            @{counter++;}
        </section>
    </a>
    }

</section>

<a asp-action="Create">Create</a>